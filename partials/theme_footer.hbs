    <div class="backdrop"></div>

    <footer class="site-footer container">
        <div class="row">
            <div class="col-md-12">
                <div class="footer-content">
                    <div class="row">
                        {{#get "tags" limit="all"}}
                            {{#if tags}}
                                <div class="col-md-6">
                                    <h3>{{t "Tags"}}</h3>
                                    <ul class="tags">
                                        {{#foreach tags}}
                                            <li>
                                                <a href="{{url}}">{{name}}</a>
                                            </li>
                                        {{/foreach}}
                                    </ul>
                                </div>
                            {{/if}}
                        {{/get}}
                        {{#if @labs.subscribers}}
                        <div class="col-md-6">
                            <h3>{{t "Newsletter"}}</h3>
                            {{subscribe_form
                                form_class="gh-signin"
                                input_class="gh-input"
                                button_class="btn"
                                placeholder=(t "Your email address")
                            }}
                        </div>
                        {{/if}}
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <p class="copyright">{{t "Copyright"}} &copy; {{date format="YYYY"}}, <a href="{{@site.url}}">{{@site.title}}</a>. {{t "All Right Reserved"}}.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>